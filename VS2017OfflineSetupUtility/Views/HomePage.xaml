                                        </Path.Data>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="VS2017 Offline Download" FontSize="14" FontWeight="SemiBold" Padding="14,5" Foreground="{StaticResource BlackSolidColorBrush}" TextWrapping="Wrap"/>
                            <TextBlock Text="Download Visual Studio 2017 Offline Setup files and folder, using command line interface. (Need internet connection)" FontSize="14" Padding="14,0" Foreground="{StaticResource BlackSolidColorBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock Grid.Row="2" Padding="17">
                    <Run Text="Note*:" FontWeight="SemiBold" FontStyle="Italic"/>
                    <Run Text="For now only VS2017 Offline Clean Util is available and its selected by default. Click Proceed button to continue." />
                </TextBlock>
            </Grid>
            <!--#endregion Center Content-->

            <Rectangle Grid.Column="3" Width="0.8" VerticalAlignment="Stretch" Fill="LightGray"/>
            <!--#region Right Content-->
            <StackPanel Grid.Column="4">
                <TextBlock Text="Selected feature details" Style="{StaticResource HeaderTextBlockStyle}" Padding="14"/>
                <TextBlock Text="Feature name" Padding="14,5" Style="{StaticResource SubHeaderTextBlockStyle}"/>
                <TextBlock Text="VS2017 Offline Clean Util" Style="{StaticResource BodyTextBlockStyle}" Padding="14,0"/>
                <TextBlock Text="About" Style="{StaticResource SubHeaderTextBlockStyle}" Padding="14,20,14,5" />
                <TextBlock Text="Allow deletion of old version Visual Studio 2017 Offline Setup files and folder, which saves your hard disk space." Style="{StaticResource BodyTextBlockStyle}" Padding="14,0" />
                <TextBlock Text="Version" Style="{StaticResource SubHeaderTextBlockStyle}" Padding="14,20,14,5" />
                <TextBlock Text="1.0.0.0" Style="{StaticResource BodyTextBlockStyle}" Padding="14,0" />
            </StackPanel>
            <!--#endregion Right Content-->
        </Grid>
        <!--#endregion Content-->
    </Grid>
</Page>
