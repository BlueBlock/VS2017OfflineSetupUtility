                                        </Path.Data>
                                    </Path>
                                    <Path Fill="#7f8c8d" StrokeThickness="0">
                                        <Path.Data>
                                            <PathGeometry Figures="m 35.480496 29.320809 -4.333053 4.333066 1.924627 1.924627 1.071307 -1.071307 v 1.794351 a 2.9486005 2.9486005 0 0 1 -2.945423 2.945423 h -1.260059 v 2.722123 h 1.260046 a 5.6742683 5.6742683 0 0 0 5.667546 -5.667546 v -1.745665 l 1.022126 1.022626 1.924627 -1.924627 z" FillRule="NonZero"/>
                                        </Path.Data>
                                    </Path>
                                    <Path Fill="#7f8c8d" StrokeThickness="0">
                                        <Path.Data>
                                            <PathGeometry Figures="M 25.404905 31.510479 A 12.707214 12.707214 0 0 0 13.303099 18.838767 c -0.112982 -0.0098 -0.223954 -0.03045 -0.338712 -0.03045 -0.03199 0 -0.06258 0.0077 -0.09447 0.0085 -0.05639 -7.07e-4 -0.11102 -0.0085 -0.16756 -0.0085 a 12.702357 12.702357 0 0 0 0 25.404714 c 0.05654 0 0.111161 -0.0078 0.16756 -0.0085 0.03189 8.84e-4 0.06249 0.0085 0.09447 0.0085 0.114758 0 0.22573 -0.02064 0.338712 -0.03045 a 12.707302 12.707302 0 0 0 12.101806 -12.6721 z m -2.579499 2.128087 h -3.275672 c 0.05649 -0.69071 0.09318 -1.39734 0.09318 -2.128087 a 25.714372 25.714372 0 0 0 -0.151149 -2.78257 h 3.164992 a 10.180476 10.180476 0 0 1 0.16866 4.910679 z M 13.1259 41.834463 c -0.07817 0.0031 -0.155282 0.01043 -0.233831 0.01184 -1.457716 -0.07381 -3.0183421 -2.376498 -3.7778609 -5.850614 h 7.7003649 c -0.744085 3.403478 -2.256657 5.678074 -3.688668 5.83877 z M 8.7437807 33.63857 C 8.6784151 32.955873 8.6429788 32.244828 8.6429788 31.510483 a 21.958702 21.958702 0 0 1 0.1791611 -2.78257 h 8.2844841 a 21.958702 21.958702 0 0 1 0.179161 2.78257 c 0 0.734349 -0.03544 1.44539 -0.100802 2.128087 z M 12.89206 21.175034 c 0.07855 0.0015 0.155667 0.0087 0.233831 0.01185 1.338546 0.150199 2.749357 2.143578 3.535835 5.183884 H 9.2670594 c 0.8039226 -3.107771 2.2604766 -5.126637 3.6250136 -5.195729 z m 8.775923 5.195729 H 19.11022 a 15.81827 15.81827 0 0 0 -1.356145 -3.879196 10.409755 10.409755 0 0 1 3.913917 3.879196 z M 8.3844111 22.12197 A 15.250026 15.250026 0 0 0 6.81861 26.370763 H 3.7370111 a 10.399237 10.399237 0 0 1 4.6474 -4.248793 z M 2.748306 28.727891 h 3.6887171 a 25.714367 25.714367 0 0 0 -0.1511497 2.78257 c 0 0.730752 0.036683 1.437381 0.093178 2.128087 h -3.79941 a 10.18208 10.18208 0 0 1 0.1686601 -4.910679 z m 0.646205 7.267807 H 6.691379 A 15.870032 15.870032 0 0 0 8.3844111 40.899279 10.394751 10.394751 0 0 1 3.394511 35.995693 Z m 14.359613 4.53394 a 16.443464 16.443464 0 0 0 1.483323 -4.53394 h 2.773041 a 10.4