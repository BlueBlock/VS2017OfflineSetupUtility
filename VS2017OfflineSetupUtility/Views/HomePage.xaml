<Page x:Class="VS2017OfflineSetupUtility.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="VS2017 Offline Setup Utility">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--#region  Header-->
        <TextBlock Grid.Row="0" Text="VS2017 Offline Setup Utility" Style="{StaticResource AppHeaderTextBlockStyle}"/>
        <Rectangle Grid.Row="0" Style="{StaticResource HorizontalSeperatorStyle}"/>
        <!--#endregion Header-->

        <!--#region Footer-->
        <Grid Grid.Row="2" Background="#e2e2e2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="(C) 2017-2018 Deepak Rathi. THIS APPLICATION IS PROVIDED AS IS WITH OUT ANY WARRANTY OF ANY KIND. DEVELOPER OF THIS APP IS NOT RESPONSIBLE FOR ANY PROBLEM/ISSUE/DEFECTS CAUSED DUE TO THIS APPLICATION OR ANY CONTENT IN THIS APPLICATION. THIS APP IS NOT AFFILIATED TO MICROSOFT OR ANY OTHER THIRD PARTY. NO USER DATA IS COLLECTED BY DEVELOPER OF THIS APP." 
                       Padding="20" TextWrapping="Wrap" Foreground="Gray"
                       Grid.Column="0"/>
            <Button Content="Proceed" Grid.Column="1" Width="80" Height="30" Background="White" Margin="10"
                    Command="{Binding ProceedCommand}"/>
            <Button Content="Exit" Grid.Column="2" Width="80" Height="30" Background="White" Margin="10"
                    Command="{Binding ExitCommand}"/>
        </Grid>
        <!--#endregion Footer-->

        <!--#region Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>

            <!--#region Left Content-->
            <StackPanel Grid.Column="0">
                <TextBlock Text="1. Select a feature type" Style="{StaticResource LeftContentTextBlockStyle}"/>
                <TextBlock Text="2. Click Proceed button." Style="{StaticResource LeftContentTextBlockStyle}"/>
            </StackPanel>
            <!--#endregion Left Content-->

            <Rectangle Grid.Column="1" Width="0.8" VerticalAlignment="Stretch" Fill="LightGray"/>
            <!--#region Center Content-->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Please select a feature type to continue" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}" Padding="17"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <Button Background="Transparent" Width="200" Height="200" Margin="17">
                        <StackPanel>
                            <Viewbox Stretch="Uniform" Width="50" Height="50">
                                <Canvas Width="48" Height="48">
                                    <Path Fill="#7f8c8d">
                                        <Path.Data>
                                            <PathGeometry Figures="M28 10H8V8H28Zm4 2H8v2H32ZM26.227 34.813 21.414 30l4.813-4.813-1.414-1.414L18.586 30l6.227 6.227ZM42.414 30l-6.227-6.227-1.414 1.414L39.586 30l-4.812 4.813 1.414 1.414ZM48 16V44H13V32H4V4H40V16ZM13 30V16H38V6H6V30ZM46 18H15V42H46ZM29.351 38l4-16H31.29l-4 16Z" FillRule="NonZero"/>
                                        </Path.Data>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="VS2017 Offline Clean Util" FontSize="14" FontWeight="SemiBold" Padding="14,5" Foreground="{StaticResource BlackSolidColorBrush}" TextWrapping="Wrap"/>
                            <TextBlock Text="Allow deletion of old version Visual Studio 2017 Offline Setup files and folder, which saves your hard disk space." FontSize="14" Padding="14,0" Foreground="{StaticResource BlackSolidColorBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <Button Background="Transparent" Width="200" Height="200" Margin="17" IsEnabled="False">
                        <StackPanel >
                            <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform" Width="50" Height="50">
                                <Canvas Width="47" Height="47">
                                    <Path Fill="#7f8c8d" StrokeThickness="0">
